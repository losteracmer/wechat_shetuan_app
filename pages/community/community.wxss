/*悬浮按钮*/
.round-click{
    height: 100rpx;
    width: 100rpx;
    background-color: #d4a3f5;
    border-radius: 100%;
    position: fixed;
    bottom: 150rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click-hover{
  background-color: #6a03af;
}
.round-click view{
    font-size: 32rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
}


.search image{
  margin: 15rpx;
  width: 35rpx;
  height: 35rpx;
  opacity: 0.5;
}
page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #eeeeee;
}

.navbar {
  background-color: white;
  width: 100%;
  height: 7%;
}

.kind {
  width: 100%;
  height: 100%;
  white-space: nowrap;
  margin: 0 -10rpx;
}

.item {
  display: inline-block;
  text-align: center;
  color: lightgray;
  font-weight: 400;
  width: 170rpx;
  line-height: 90%;
  height: 80%;
}

.item.active {
  color: black;
  border-bottom: 10rpx solid #d4a3f5;
}

.swip {
  height: 90%;
}

.content {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  margin-top: 2%;
}

.card {
  border-radius: 15rpx;
  width: 94%;
  height: 200rpx;
  background-color: #ffffff;
  margin-bottom: 3%;
  margin-left: 3%;
}

.cardcon {
  display: flex;
  flex-direction: row;
}

.cardImage {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 25rpx;
}

.textcon {
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  margin-top: 10rpx;
}

.cardName{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 15pt;
  font-weight: 500;
}

.cardWords{
  height: 50rpx;
  width: 350rpx;
  line-height: 50rpx;
  font-size: 33rpx;
  color: grey;
}

.waiting{
  position: absolute;
  z-index:999;
  height: 100rpx;
  width: 100rpx;
  bottom: 50%;
  left: 45%;
}



.xiaoqu text{
  font-size: 33rpx;
  color: grey;
}

.textover{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 400rpx;
}

.xiaoquimg{
  margin: 0rpx;
  margin-bottom: -10rpx;
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
}