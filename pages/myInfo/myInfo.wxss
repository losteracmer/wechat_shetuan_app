/* pages/myInfo/myInfo.wxss */

page {
  background-color: white;
}

.part{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center; 
}

.input_area {
  height: 115px;
  border: 1px dashed #d4a3f5;
  border-radius: 20rpx;
  margin-top: 20px;
  margin-bottom: 20px;
}

.submit {
  background-color: #d4a3f5;
  color: white;
}

.fuck {
  font-size: 40rpx;
  color: #3d3d3d;
}


.kind-list-updatemsg {
  margin: 20rpx 0;
  background-color: rgb(247, 247, 247);
  border-radius: 30rpx;
  overflow: hidden;
  margin-top: 80rpx;
}
.kind-list-updatemsg:first-child {
  margin-top: 200rpx;
}
.kind-list-text{
  flex: 1;
  color: #5c5c5c;
  text-align: center;
}
.kind-list-img {
  width: 60rpx;
  height: 60rpx;
}
.kind-list-updatemsg-hd {
  padding: 30rpx;
  display: flex;
  align-items: center;

  transition: opacity .3s;
}
.kind-list-updatemsg-hd-show {
  opacity: .2;
}
.kind-list-updatemsg-bd {
  height: 0;
  overflow: hidden;
}
.kind-list-updatemsg-bd-show {
  height: auto;
}
.navigator-text {
  flex: 1;
  margin:15rpx 50rpx;
  font-size:35rpx;
  color:#3b3b3b;
  border-bottom:1rpx dotted #757575
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}