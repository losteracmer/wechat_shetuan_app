<!--pages/changePassword/changePassword.wxml-->
<view class='content'>
  <form bindsubmit="formSubmit">
    <input type='password' class='old' name="oldpw" placeholder='原密码' placeholder-class='plh'></input>
    <input type='password' class='new' name="newpw1" placeholder='新密码' placeholder-class='plh'></input>
    <input type='password' class='new' name="newpw2" placeholder='再次输入新密码' placeholder-class='plh'></input>
    <button class="btn" formType="submit">提交</button>
  </form>
</view>