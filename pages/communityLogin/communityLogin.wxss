/* pages/communityLogin/communityLogin.wxss */

page {
  background-color: white;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-items: center;
}

.main {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
  width: 100%;
}

.cell {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-items: center;
  
}

.cellinput {
  background-color: white;
  width: 700rpx;
  height: 100rpx;
  padding-left: 30rpx;
}

.up{
  border-top:1rpx solid #ddd; 
}

.down{
  border-top:1rpx solid #ddd; 
  border-bottom: 1rpx solid #ddd;
}


.login {
  margin-top: 40rpx;
  width: 650rpx;
  height: 100rpx;
  background-color: #d4a3f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}

.login text {
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 15rpx;
  padding: 0;
  font-size: 35rpx;
  color: white;
  font-weight: 500;
}

.text{
  width: 650rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.text text{
  margin-top: 30rpx;
  color: #ccc;
  border-bottom: 1rpx solid #ccc;
  font-size: 30rpx;
}

.pla{
  font-size: 30rpx;
}
